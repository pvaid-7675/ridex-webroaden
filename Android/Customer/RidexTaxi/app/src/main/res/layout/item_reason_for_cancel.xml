<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_5_dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/common_10_dp"
        android:text="Lost Item"
        android:textColor="@color/colorText"
        android:textSize="@dimen/common_16_sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_10_dp"
        android:src="@drawable/ic_check_thumb"
        android:visibility="visible" />
</RelativeLayout>