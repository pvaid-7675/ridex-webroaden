<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

    </style>

    <!--Otp view style-->
    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--Custom style-->
    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTransparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTransparent</item>
    </style>

    <style name="MyTextInputLayout" parent="AppTheme">
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">@dimen/common_16_sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/common_3_dp</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_marginTop">@dimen/common_20_dp</item>
        <item name="android:textSize">@dimen/common_12_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_light</item>
    </style>

    <style name="buttonStyle">
        <item name="android:padding">@dimen/common_16_dp</item>
        <item name="android:textSize">@dimen/common_16_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_rounded_border</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="buttonStyleRegister">
        <item name="android:padding">@dimen/common_16_dp</item>
        <item name="android:textSize">@dimen/common_16_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_rounded_border_color_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="paymentTypeTextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/common_20_sp</item>
        <item name="android:paddingLeft">@dimen/common_5_dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/common_12_dp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppTheme.FloatingAccentButtonOverlay">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="autoScroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/common_14_sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="textViewMapSearchTitle">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/common_10_sp</item>
    </style>

    <!--Alert dialog-->
    <style name="SettingsDialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <!--Rating bar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
