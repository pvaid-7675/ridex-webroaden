<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <!--Otp view style-->
    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--Custom style-->
    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTransparent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorTransparent</item>
    </style>

    <style name="SwitchCustom" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- inactive thumb color-->
        <item name="colorSwitchThumbNormal">@color/colorRateBg</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <!--<item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>-->
    </style>

    <style name="AppTheme.FloatingAccentButtonOverlay">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <!--Button style-->
    <style name="buttonStyle">
        <item name="android:padding">@dimen/common_16_dp</item>
        <item name="android:textSize">@dimen/common_16_sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <!--button style blue-->
    <style name="buttonRegisterStyle">
        <item name="android:padding">@dimen/common_16_dp</item>
        <item name="android:textSize">@dimen/common_16_sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_rounded_border_color_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <!--EditText style-->
    <style name="editTextStyle">
        <item name="android:layout_marginTop">@dimen/common_3_dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/common_16_dp</item>
    </style>

    <style name="MyTextInputLayout" parent="AppTheme">
        <item name="colorAccent">@color/gray</item>
    </style>

    <!--textview style-->
    <style name="textViewStyle">
        <item name="android:layout_marginTop">@dimen/common_20_dp</item>
        <item name="android:textSize">@dimen/common_12_sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/nunito_light</item>
    </style>

    <style name="progressBarStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_progress_bar</item>
    </style>

    <!--rounded progress bar-->
    <style name="progressBarStyleRounded" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/circular_progress</item>
    </style>

    <!--Rating bar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!--small rating bar-->
    <style name="RatingBarSmall" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorOrange</item>
    </style>

    <!--map search bar style-->
    <style name="textViewMapSearchTitle">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/common_10_sp</item>
    </style>

    <style name="autoScroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/common_14_sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--Alert dialog-->
    <style name="SettingsDialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
    </style>

    <style name="StyleProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
    </style>


    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
    </style>

    <style name="textViewdriverStyle">
        <item name="android:textSize">@dimen/common_12_sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/nunito_light</item>
    </style>

</resources>
