<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/darkGray"
        app:cardElevation="5dp"
        android:layout_margin="@dimen/padding_5dp"
        android:outlineSpotShadowColor="@color/darkGray"
        android:outlineAmbientShadowColor="@color/darkGray">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/padding_45dp"
            android:paddingVertical="@dimen/padding_5dp"
            android:paddingHorizontal="@dimen/padding_10dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/messageView"
                android:layout_toEndOf="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/inriasans_regular"
                android:textSize="@dimen/txt_14sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_10dp"/>



        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>